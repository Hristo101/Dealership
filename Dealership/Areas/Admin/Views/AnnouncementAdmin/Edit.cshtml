@* Views/AnnouncementAdmin/Edit.cshtml *@
@using Dealership.Core.Models.Announcement
@model EditAnnouncementViewModel

@{
    ViewData["Title"] = "Редактиране на обява";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" asp-controller="AnnouncementAdmin" method="post" class="edit-announcement-form">
        <div class="form-group">
            <label for="Description">Описание на обявата</label>
            <textarea class="form-control" id="Description" name="Description" rows="5">@Model.Description</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ExtrasForComfort">Екстри за комфорт</label>
            <textarea class="form-control" id="ExtrasForComfort" name="ExtrasForComfort" rows="5">@Model.ExtrasForComfort</textarea>
            <span asp-validation-for="ExtrasForComfort" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="SecurityExtras">Екстри за безопасност</label>
            <textarea class="form-control" id="SecurityExtras" name="SecurityExtras" rows="5">@Model.SecurityExtras</textarea>
            <span asp-validation-for="SecurityExtras" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Price">Цена</label>
            <input type="number" step="0.01" class="form-control" id="Price" name="Price" value="@Model.Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="CreatedDate">Дата на създаване</label>
            <input type="text" class="form-control" id="CreatedDate" name="CreatedDate" value="@Model.CreatedDate.ToString("yyyy-MM-dd")" disabled />
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Запази промените</button>
            <a href="@Url.Action("AllSales", "AnnouncementAdmin", new { area = "Admin" })" class="btn btn-secondary">Отказ</a>
        </div>
    </form>
</div>


<!-- Стилове -->
<style>
    .container {
        max-width: 800px;
        margin-top: 20px;
        padding: 20px;
    }

    h2 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        margin-bottom: 10px;
    }

    .form-control {
        border-radius: 5px;
        padding: 10px;
        font-size: 14px;
    }

    .form-actions {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>
