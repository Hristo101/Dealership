@using Dealership.Core.Models.Query
@model QueryAnswerViewModel

@{
    ViewData["Title"] = "Задайте въпрос";
}

<div class="query-page container my-5">
    <h1 class="title text-center mb-4">Задайте въпрос към обявата</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center success-message">
            @TempData["SuccessMessage"]
        </div>
    }

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <form asp-action="GiveAnswer" asp-controller="QueryAdmin" method="post" class="query-form">
        <div class="form-group">
            <label asp-for="Answer" class="form-label">Вашият въпрос:</label>
            <textarea asp-for="Answer" class="form-control" rows="6" placeholder="Опишете отговора си тук..."></textarea>
            <span asp-validation-for="Answer" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="Id" value="@Model.Id" />

        <div class="button-container text-center mt-4">
            <button type="submit" class="btn btn-success btn-lg submit-button">Изпрати отговор</button>
            <a asp-action="ShowAllQueries" asp-controller="QueryAdmin" asp-route-id="@Model.Id" class="btn btn-danger btn-lg cancel-button">Назад към въпросите</a>
        </div>
    </form>
</div>

<link rel="stylesheet" href="~/css/Query/add-query-style.css" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
