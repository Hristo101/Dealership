@using Dealership.Core.Models.Car
@model CarViewModel

@{
    ViewData["Title"] = "Добави нова кола";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>


    <form asp-action="Add" asp-controller="CarAdmin" method="post">
        <input type="hidden" name="UserId" value="@Model.UserId" />

        <div class="form-group">
            <label for="Make">Марка</label>
            <input type="text" class="form-control" id="Make" name="Make" value="@Model.Make" required />
        </div>

        <div class="form-group">
            <label for="Model">Модел</label>
            <input type="text" class="form-control" id="Model" name="Model" value="@Model.Model" required />
        </div>

        <div class="form-group">
            <label for="Color">Цвят</label>
            <input type="text" class="form-control" id="Color" name="Color" value="@Model.Color" required />
        </div>

        <div class="form-group">
            <label for="EngineType">Тип двигател</label>
            <input type="text" class="form-control" id="EngineType" name="EngineType" value="@Model.EngineType" required />
        </div>

        <div class="form-group">
            <label for="Speeds">Тип скоростна кутия</label>
            <input type="text" class="form-control" id="Speeds" name="Speeds" value="@Model.Speeds" required />
        </div>

        <div class="form-group">
            <label for="Year">Година</label>
            <input type="number" class="form-control" id="Year" name="Year" value="@Model.Year" required />
        </div>

        <div class="form-group">
            <label for="Mileage">Пробег (км)</label>
            <input type="number" class="form-control" id="Mileage" name="Mileage" value="@Model.Mileage" required />
        </div>

        <div class="form-group">
            <label for="Horsepower">Мощност (к.с.)</label>
            <input type="number" class="form-control" id="Horsepower" name="Horsepower" value="@Model.Horsepower" required />
        </div>

        <div class="form-group">
            <label for="CarImages">Снимки на колата (разделени със запетая)</label>
            <input type="text" class="form-control" id="CarImages" name="CarImages" value="@Model.CarImages" placeholder="Пример: /img/car1.jpg, /img/car2.png" required />
            <small class="form-text text-muted">Въведете пътища към изображенията, разделени със запетая.</small>
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Добави кола</button>
    </form>
</div>

