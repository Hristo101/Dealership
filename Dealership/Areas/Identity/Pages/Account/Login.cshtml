@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/LoginStyle.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>@ViewData["Title"] 🚗</h1>
            <p>Добре дошли обратно в нашата автокъща! 🚙</p>
        </header>
        <form id="loginForm" method="post">
            <h2>Влезте в своя акаунт 🏁</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Имейл 📨</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Парола" />
                <label asp-for="Input.Password">Парола 🔑</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button id="loginSubmit" type="submit" class="btn btn-primary" style="margin: 0.5em; margin-bottom: 1.5em;">
                Вход 
            </button>
        </form>
        <footer>
            <p>🚘 Приятно шофиране! Влезте и пазарувайте с нас! 🚗</p>
        </footer>
    </div>
</body>
</html>
