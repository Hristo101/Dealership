@using Dealership.Core.Models
@model IEnumerable<AllAnnouncementViewModel>

    <link href="~/css/AllAnnouncementStyle.css" rel="stylesheet" />
<div class="container" style="padding: 20px;">
    <!-- Полета за търсене -->
    <form method="get" action="" style="margin-bottom: 20px;">
        <div class="row">
            <!-- Марка -->
            <div class="col-md-2">
                <label>Марка</label>
                <select class="form-control">
                    <option>Всички</option>
                    <option>Volkswagen</option>
                    <option>BMW</option>
                    <option>Ssang Yong</option>
                </select>
            </div>

            <!-- Година -->
            <div class="col-md-2">
                <label>Година</label>
                <select class="form-control">
                    <option>Всички</option>
                    <option>2023</option>
                    <option>2022</option>
                    <option>2021</option>
                </select>
            </div>

            <!-- Гориво -->
            <div class="col-md-2">
                <label>Гориво</label>
                <select class="form-control">
                    <option>Всички</option>
                    <option>Дизел</option>
                    <option>Бензин</option>
                    <option>Електрически</option>
                </select>
            </div>

            <!-- Скоростна кутия -->
            <div class="col-md-2">
                <label>Скорости</label>
                <select class="form-control">
                    <option>Всички</option>
                    <option>Автоматична</option>
                    <option>Ръчна</option>
                </select>
            </div>

            <!-- Цвят -->
            <div class="col-md-2">
                <label>Цвят</label>
                <select class="form-control">
                    <option>Всички</option>
                    <option>Черен</option>
                    <option>Сив</option>
                    <option>Бял</option>
                </select>
            </div>

            <!-- Сортиране -->
            <div class="col-md-2">
                <label>Сортиране</label>
                <select class="form-control">
                    <option>Цена</option>
                    <option>Година</option>
                </select>
            </div>
        </div>

        <button type="submit" class="btn btn-success" style="margin-top: 20px;">Търси</button>
    </form>

    <!-- Обяви -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="announcement-card">
                    <img src="@Url.Content(item.ImageUrl)" alt="@item.Model" class="car-image" />
                    <div class="car-info">
                        <span class="car-make">@item.Make</span>
                        <span class="car-model">@item.Model</span>
                        <span class="car-horsepower">@item.HorsePower HP</span>
                    </div>
                    <div class="car-price">Цена: @item.Price лв.</div>
                    <a asp-action="Details" asp-route-id="@item.Id" class="view-button">Преглед</a>
                </div>
            </div>
        }
    </div>
</div>
