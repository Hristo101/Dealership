@using Dealership.Core.Models
@model IEnumerable<AllAnnouncementViewModel>
<link rel="stylesheet" href="~/css/AllAnnouncementStyle.css">
<div class="container search-container">
    <!-- Заглавие -->
    <h2 class="search-title">Търсене на автомобил</h2>
    <hr class="title-divider" />

    <!-- Търсачка -->
    <form method="get" action="">
        <div class="row search-row">
            <!-- Марка -->
            <div class="col-md-2">
                <select class="form-control">
                    <option>Марка</option>
                    <option>BMW</option>
                    <option>Mercedes</option>
                    <option>Volkswagen</option>
                    <option>Toyota</option>
                </select>
            </div>

            <!-- Година -->
            <div class="col-md-2">
                <select class="form-control">
                    <option>Година</option>
                    <option>2023</option>
                    <option>2022</option>
                    <option>2021</option>
                    <option>2020</option>
                </select>
            </div>

            <!-- Гориво -->
            <div class="col-md-2">
                <select class="form-control">
                    <option>Двигател</option>
                    <option>Бензин</option>
                    <option>Дизел</option>
                    <option>Електрически</option>
                    <option>Хибрид</option>
                </select>
            </div>

            <!-- Скорости -->
            <div class="col-md-2">
                <select class="form-control">
                    <option>Скорости</option>
                    <option>Автоматични</option>
                    <option>Ръчни</option>
                </select>
            </div>


            <!-- Цвят -->
            <div class="col-md-2">
                <select class="form-control">
                    <option>Цвят</option>
                    <option>Черен</option>
                    <option>Бял</option>
                    <option>Син</option>
                    <option>Червен</option>
                </select>
            </div>
        </div>

        <!-- Сортиране -->
        <div class="sort-section">
            <label>Сортиране по:</label>
            <select class="form-control sort-dropdown">
                <option>Година (възходящо)</option>
                <option>Година (низходящо)</option>
                <option>Цена (възходящо)</option>
                <option>Цена (низходящо)</option>
            </select>
        </div>
    </form>
</div>

    <!-- Обяви -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="announcement-card">
                    <img src="@Url.Content(item.ImageUrl)" alt="@item.Model" class="car-image" />
                    <div class="car-info">
                        <span class="car-make">@item.Make</span>
                        <span class="car-model">@item.Model</span>
                        <span class="car-horsepower">@item.HorsePower HP</span>
                    </div>
                    <div class="car-price">Цена: @item.Price лв.</div>
                    <a asp-action="Details" asp-route-id="@item.Id" class="view-button">Преглед</a>
                </div>
            </div>
        }
    </div>
</div>
