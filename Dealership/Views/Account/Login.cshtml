@page
@using Dealership.Areas.Identity.Pages.Account
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/LoginStyle.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>@ViewData["Title"] 🚗</h1>
            <p>Добре дошли обратно в нашата автокъща! 🚙</p>
        </header>

        <!-- Форма за вход -->
        <form id="loginForm" method="post">
            <h2>Влезте в своя акаунт 🏁</h2>

            <!-- Показване на грешки от валидация -->
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Имейл -->
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Имейл 📨</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Парола -->
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" placeholder="Парола" />
                <label asp-for="Input.Password">Парола 🔑</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Копче за вход -->
            <button id="loginSubmit" type="submit" class="btn btn-primary" style="margin: 0.5em; margin-bottom: 1.5em;">
                Вход
            </button>
        </form>

        <footer>
            <p>🚘 Приятно шофиране! Влезте и пазарувайте с нас! 🚗</p>
        </footer>
    </div>

    <!-- Включване на валидацията на страна на клиента -->
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
