@page
@using Dealership.Areas.Identity.Pages.Account
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>@ViewData["Title"] 🚗</h1>
            <p>Добре дошли в нашата автокъща! 🚙</p>
        </header>

        <!-- Регистрационната форма -->
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Създайте нов акаунт 🏎️</h2>

            <!-- Показване на грешки от валидация -->
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Потребителско име -->
            <div class="form-floating">
                <input asp-for="UserName" class="form-control" placeholder="Вашето потребителско име" autocomplete="username" aria-required="true" />
                <label asp-for="UserName">Потребителско име</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <!-- Имейл -->
            <div class="form-floating">
                <input asp-for="Email" class="form-control" placeholder="name@example.com" autocomplete="email" aria-required="true" />
                <label asp-for="Email">Имейл 📨</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Парола -->
            <div class="form-floating">
                <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" placeholder="Парола" aria-required="true" />
                <label asp-for="Password">Парола 🔑</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Повторете паролата -->
            <div class="form-floating">
                <input asp-for="PasswordRepeat" class="form-control" type="password" autocomplete="new-password" placeholder="Повторете паролата" aria-required="true" />
                <label asp-for="PasswordRepeat">Повторете паролата 🔒</label>
                <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
            </div>

            <!-- Копче за регистрация -->
            <button id="registerSubmit" type="submit" class="btn btn-primary" style="margin: 0.5em; margin-bottom: 1.5em;">
                Регистрация
            </button>
        </form>

        <!-- Footer -->
        <footer>
            <p>🚘 Приятно шофиране! Пазарувайте с нас! 🚗</p>
        </footer>
    </div>

    <!-- Включване на валидацията на страна на клиента -->
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
