@using Dealership.Core.Models
@model ConfirmDeleteViewModel

@{
    ViewData["Title"] = "Потвърждение на изтриването";
}

<div class="confirm-delete-container">
    <h2 class="confirm-delete-title">Потвърдете изтриването на коментар</h2>

    <div class="confirm-delete-content">
        <p><strong>Съдържание:</strong> @Model.Content</p>
        <p><strong>Оценка:</strong> @Model.Grade</p>
    </div>

    <div class="confirm-delete-buttons">
        <form method="post" action="@Url.Action("ConfirmDeletePost", "Comment", new { id = Model.Id })">
            <button type="submit" class="btn btn-danger">Да, изтрий го</button>
        </form>
        <a href="@Url.Action("AllComments", "Comment")" class="btn btn-secondary">Отказ</a>
    </div>
</div>

<style>
    .confirm-delete-container {
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: 50px auto;
    }

    .confirm-delete-title {
        font-size: 24px;
        font-weight: bold;
        color: #e74c3c;
        text-align: center;
    }

    .confirm-delete-content {
        margin-top: 20px;
        font-size: 18px;
        color: #333;
    }

    .confirm-delete-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        text-align: center;
    }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }

    .btn-secondary {
        background-color: #7f8c8d;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #95a5a6;
    }
</style>
