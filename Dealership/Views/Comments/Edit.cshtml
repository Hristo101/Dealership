@using Dealership.Core.Models.Comments
@model EditCommentViewModel
<div class="hero-section">
    <div class="hero-content">
        <div class="text-content">
            <h1>Редактирайте вашия коментар ✍️</h1>
            <p>
                Променете вашето мнение и ни помогнете да се подобрим! 😊
            </p>
        </div>
        <div class="image-container">
            <img src="https://videoigniter.com/wp-content/uploads/2023/01/animation-process-animator.png"
                 alt="Редакция на коментар" class="hero-image">
        </div>
    </div>
</div>

<div class="container">
    <h2 class="form-header">Редактиране на коментар</h2>
    <form method="post" action="/Comments/Edit/@Model.Id">
        <div class="add-comment-form">
            <!-- Поле за коментар -->
            <textarea id="commentContent" name="Content" placeholder="Напишете вашия коментар..." required>@Model.Content</textarea><br>

            <!-- Оценка -->
            <label for="commentGrade">Оценка:</label>
            <select id="commentGrade" name="Grade">
                <option value="1" selected="selected">1 ★</option>
                <option value="2">2 ★★</option>
                <option value="3">3 ★★★</option>
                <option value="4">4 ★★★★</option>
                <option value="5">5 ★★★★★</option>
            </select><br>

            <!-- Бутоните за запазване и отказ -->
            <div class="form-buttons">
                <button type="submit" class="btn-submit">💾 Запази промените</button>
                <a href="/Comments/All" class="btn-cancel">❌ Назад</a>
            </div>
        </div>
    </form>


</div>

<style>
    textarea {
        resize: vertical;
        width: 600px;
    }
    .hero-section {
        background: linear-gradient(135deg, #ff9966, #ff5e62);
        color: white;
        padding: 40px 20px;
        border-radius: 10px;
    }

    .hero-content {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        gap: 20px;
    }

    .text-content {
        flex: 1;
        max-width: 500px;
    }

        .text-content h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
            line-height: 1.2;
        }

        .text-content p {
            font-size: 1.2em;
            line-height: 1.6;
        }

    .image-container {
        flex: 1;
        text-align: center;
    }

    .hero-image {
        max-width: 100%;
        height: auto;
        border-radius: 15px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        transform: rotate(-2deg);
    }

    /* Контейнер за формата */
    .container {
        margin: 40px auto;
        padding: 30px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 923px;
    }

    .form-header {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
        font-size: 1.8em;
    }

    .edit-comment-form textarea {
        width: 100%;
        height: 120px;
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 20px;
        box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .edit-comment-form select {
        font-size: 1em;
        padding: 10px;
        margin-top: 10px;
        width: 123px;
        border-radius: 5px;
        border: 1px solid #ccc;
        box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.1);
    }

    .form-buttons {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        margin-top: 2em;
    }

    .btn-submit, .btn-cancel {
        flex: 1;
        padding: 12px 20px;
        font-size: 1.1em;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        text-transform: uppercase;
        font-weight: bold;
        transition: all 0.3s ease;
    }

    .btn-submit {
        background: linear-gradient(135deg, #28a745, #218838);
        color: white;
        box-shadow: 0px 4px 8px rgba(40, 167, 69, 0.3);
    }

        .btn-submit:hover {
            background: linear-gradient(135deg, #218838, #1e7e34);
            box-shadow: 0px 6px 12px rgba(40, 167, 69, 0.5);
        }

    .btn-cancel {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
        box-shadow: 0px 4px 8px rgba(220, 53, 69, 0.3);
        text-align: center;
        display: block;
    }

        .btn-cancel:hover {
            background: linear-gradient(135deg, #c82333, #bd2130);
            box-shadow: 0px 6px 12px rgba(220, 53, 69, 0.5);
        }
</style>
