<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Коментари</title>
    <link rel="stylesheet" href="styles.css"> <!-- Свързваме външен CSS файл за стилове -->
</head>
<body>

    <!-- Главна секция с фоново изображение -->
    <div class="hero-section">
        <div class="hero-content">
            <h1>Споделете мнението си! 😊</h1>
            <p>Ние вярваме, че вашето мнение е важно! Оставете коментар и споделете вашето мнение за нашия продукт. 💬</p>
        </div>
        <!-- Поставяме снимката отгоре -->
        <img src="https://img.freepik.com/premium-photo/man-sitting-desk-with-laptop-computer-front-him-generative-ai_1034979-27394.jpg" alt="Изображение на продукт" class="hero-image">
    </div>

    <!-- Контейнер за коментари -->
    <div class="container">
        <h2>Коментари</h2>

        <!-- Бутон за добавяне на коментар -->
        <div class="add-comment-btn-container">
            <button class="add-comment-btn" onclick="showAddCommentForm()">Добави коментар</button>
        </div>

        <!-- Секция за показване на коментарите -->
        <div id="comments-section">
            <!-- Коментарите ще се зареждат тук чрез JavaScript -->
        </div>

        <!-- Форма за добавяне на нов коментар -->
        <div id="add-comment-form" class="add-comment-form" style="display: none;">
            <h3>Добави нов коментар</h3>
            <textarea id="commentContent" placeholder="Напишете вашия коментар..."></textarea><br>
            <label for="commentGrade">Оценка:</label>
            <select id="commentGrade">
                <option value="1">1 ★</option>
                <option value="2">2 ★★</option>
                <option value="3">3 ★★★</option>
                <option value="4">4 ★★★★</option>
                <option value="5">5 ★★★★★</option>
            </select><br>
            <button onclick="addComment()">Запази коментара</button>
            <button onclick="cancelAddComment()">Отказ</button>
        </div>

    </div>

    <script>
        // Примерни коментари
        const comments = [
            {
                userName: "Иван Петров",
                userImage: "https://th.bing.com/th/id/OIP.3u_ZXcwL0Le0KLUAoB9z7gHaJQ?rs=1&pid=ImgDetMain",
                createdAt: "2024-12-06T10:00:00",
                grade: 4,
                content: "Това е страхотен продукт, много ми хареса! 😊",
                userId: "1"
            },
            {
                userName: "Мария Георгиева",
                userImage: "https://th.bing.com/th/id/OIP.6IQ73UA3ReGw2i68l99ahAHaJQ?rs=1&pid=ImgDetMain",
                createdAt: "2024-12-05T09:30:00",
                grade: 5,
                content: "Превъзходно качество, препоръчвам го на всички! 😁",
                userId: "2"
            }
        ];

        // Функция за показване на всички коментари
        function loadComments() {
            const commentsSection = document.getElementById('comments-section');
            commentsSection.innerHTML = ''; // Изчистваме секцията преди да добавим нови

            comments.forEach(comment => {
                const commentDiv = document.createElement('div');
                commentDiv.classList.add('comment');

                commentDiv.innerHTML = `
                        <div class="comment-header">
                            <img src="${comment.userImage}" alt="${comment.userName}" class="user-image">
                            <strong>${comment.userName}</strong> - <span>${new Date(comment.createdAt).toLocaleString()}</span>
                        </div>
                        <div class="comment-rating">
                            ${generateStars(comment.grade)}
                        </div>
                        <div class="comment-content">
                            <p>${comment.content}</p>
                        </div>
                        <div class="comment-footer">
                            <button onclick="showCommentDetails('${comment.userId}')">Детайли</button>
                        </div>
                    `;
                commentsSection.appendChild(commentDiv);
            });
        }

        // Генериране на звездички за оценката
        function generateStars(rating) {
            let stars = '';
            for (let i = 0; i < rating; i++) {
                stars += '★';
            }
            return stars;
        }

        // Функция за показване на детайлите на коментара
        function showCommentDetails(userId) {
            alert('Показване на детайлите за потребител с ID: ' + userId);
        }

        // Функция за показване на формата за добавяне на коментар
        function showAddCommentForm() {
            document.getElementById('add-comment-form').style.display = 'block';
        }

        // Функция за добавяне на нов коментар
        function addComment() {
            const content = document.getElementById('commentContent').value;
            const grade = document.getElementById('commentGrade').value;

            if (content) {
                const newComment = {
                    userName: "Ново потребителско име",  // Това може да бъде динамично
                    userImage: "https://example.com/images/user3.jpg",  // Примерна снимка
                    createdAt: new Date().toISOString(),
                    grade: parseInt(grade),
                    content: content,
                    userId: "3" // Това също може да бъде динамично
                };

                comments.push(newComment); // Добавяме новия коментар в масива
                loadComments(); // Презареждаме коментарите
                cancelAddComment(); // Затвърдяваме формата
            }
        }

        // Функция за отказ от добавяне на коментар
        function cancelAddComment() {
            document.getElementById('commentContent').value = '';
            document.getElementById('add-comment-form').style.display = 'none';
        }

        // Зареждаме коментарите при зареждане на страницата
        window.onload = loadComments;
    </script>

</body>
