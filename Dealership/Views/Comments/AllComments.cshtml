@using Dealership.Core.Models
@model IEnumerable<CommentViewModel>

<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-content">
        <h1>Споделете мнението си! 😊</h1>
        <p>Ние вярваме, че вашето мнение е важно! Оставете коментар и споделете вашето мнение за нашия продукт. 💬</p>
    </div>
    <img src="https://img.freepik.com/premium-photo/man-sitting-desk-with-laptop-computer-front-him-generative-ai_1034979-27394.jpg" alt="Изображение на продукт" class="hero-image">
</div>

<!-- Контейнер за коментари -->
<div class="container">
    <h2 class="comments-header">Коментари</h2>

    <!-- Центриран бутон за добавяне на коментар -->
    <div class="add-comment-btn-container">
        <a href="@Url.Action("Add", "Comments")" class="btn btn-primary add-comment-btn">Добави коментар</a>
    </div>

    <!-- Коментари -->
    <div class="comments-container">
        @foreach (var comment in Model)
        {
            <div class="comment-item">
                <p class="comment-author"><strong>@comment.UserName</strong> - @comment.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
                <p class="comment-content">@comment.Content</p>
                <p class="comment-grade">Оценка: @comment.Grade</p>

                <div class="stars">
                    @for (var i = 1; i <= 5; i++)
                    {
                        if (i <= comment.Grade)
                        {
                            <span class="star filled">★</span>
                        }
                        else
                        {
                            <span class="star">★</span>
                        }
                    }
                </div>

                @if (comment.CanEdit)
                {
                    <div class="comment-actions">
                        <a asp-action="Details" asp-controller="Comments" asp-route-id="@comment.Id" class="btn btn-outline-info">Детайли</a>
                        <a asp-action="Edit" asp-controller="Comments" asp-route-id="@comment.Id" class="btn btn-outline-warning">Редактирай</a>

                        <!-- Формата за изтриване -->
                        <form method="get" asp-action="ConfirmDelete" asp-controller="Comments" asp-route-id="@comment.Id" style="display:inline;">
                            <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Сигурни ли сте, че искате да изтриете този коментар?')">Изтрий</button>
                        </form>
                    </div>
                }
            </div>
        }
    </div>
</div>

<!-- Връзка към стилизирания CSS -->
<link rel="stylesheet" href="~/css/Comments/AllCommentsCss.css" />
