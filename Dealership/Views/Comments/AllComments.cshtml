@using Dealership.Core.Models
@model IEnumerable<CommentViewModel>

<div class="comments-container">
    @foreach (var comment in Model)
    {
        <div class="comment-item">
            <p><strong>@comment.UserName</strong> - @comment.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
            <p>@comment.Content</p>
            <p>Оценка: @comment.Grade</p>

            <!-- Показваме бутоните за редактиране, детайли и изтриване само ако потребителят е автор на коментара -->
            @if (comment.CanEdit)
            {
                <div>
                    <a asp-action="Details" asp-controller="Comments" asp-route-id="@comment.Id" class="btn btn-info">Детайли</a>

                    <a asp-action="Edit" asp-controller="Comments" asp-route-id="@comment.Id" class="btn btn-warning">Редактирай</a>

                    <form method="post" asp-action="Delete" asp-controller="Comments" asp-route-id="@comment.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Сигурни ли сте, че искате да изтриете този коментар?')">Изтрий</button>
                    </form>
                </div>
            }
        </div>
    }
</div>



