<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dealership</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Dealership.styles.css" asp-append-version="true" />
    <!-- Включване на Font Awesome за иконки -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        nav.navbar {
            background-color: #343a40; /* Тъмно сив фон */
            display: flex;
            justify-content: space-between;
            width: 100%;
            box-sizing: border-box;
            padding: 10px 20px;
        }

        .navbar-nav .nav-link {
            color: white !important;
            / font-size: 18px;
            font-weight: bold;
            margin-right: 15px;
            display: flex;
            align-items: center;
            text-transform: uppercase;
        }

            .navbar-nav .nav-link i {
                margin-right: 8px;
                color: orange;
            }

            .navbar-nav .nav-link:before {
                content: '►';
                margin-right: 5px;
                color: orange;
            }

        /* Контактна информация */
        .nav-contact-info {
            display: flex;
            align-items: center;
        }

            .nav-contact-info span {
                color: white;
                font-size: 22px; /* По-големи иконки */
                margin-right: 20px;
                display: flex;
                align-items: center;
            }

                .nav-contact-info span i {
                    color: orange;
                    margin-right: 10px;
                    font-size: 28px; /* Увеличаване на размера на иконите */
                    cursor: pointer; /* Задаване на курсор за показване на интерактивност */
                }

        /* Стил за контактния бутон */
        .btn-contacts {
            background-color: orange;
            color: white;
            font-weight: bold;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            transition: width 0.3s, border-radius 0.3s, transform 0.3s; /* Плавно преходно действие */
            cursor: pointer; /* Показване на курсор при задържане на мишката */
            transform: skewX(-20deg); /* Начална форма като наклонен правоъгълник */
        }

            /* Промяна на формата на бутона при задържане на курсора */
            .btn-contacts:hover {
                width: 160px; /* Разширяване на ширината */
                border-radius: 10px; /* Промяна на формата */
                transform: skewX(0deg); /* Преобразуване в правоъгълник */
            }

        /* Падащо меню */
        .dropdown-menu {
            background-color: #343a40; /* Тъмно сив фон */
            color: white;
        }

        .dropdown-item:hover {
            background-color: orange;
            color: white;
        }

        /* Стилове за контактните данни */
        .container {
            padding-top: 20px;
        }

        /* Стилове за телефона */
        .nav-contact-info .phone {
            color: white !important; /* Важно, за да осигурим видимост */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3" style="padding:0;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Dealership</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="background-color:#343a40; padding:1em;color:white;" >
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Линкове за навигация -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Announcement" asp-action="All">Налични автомобили</a>
                        </li>

                        <!-- Добавяне на падащо меню за "Изкупуване на автомобили" -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-sync-alt"></i>Изкупуване на автомобили
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <!-- Оставям линковете празни, за да ги попълните по-късно -->
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="BuyCar">Как работим</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="SellCar">Закупуване</a></li>
                            </ul>
                        </li>
                        <!-- Линк за Мнения -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Opinions">
                                <i class="fas fa-comments"></i>Мнения
                            </a>
                        </li>
                    </ul>

                    <!-- Контактна информация -->
                    <div class="nav-contact-info">
                        <!-- Кликване върху иконките да води до съответните страници -->
                        <span><i class="fas fa-map-marker-alt" onclick="window.location.href='/Location'"></i></span> <!-- Локация -->
                        <span class="phone"><i class="fas fa-phone-alt" onclick="window.location.href='tel:+08770677767'"></i>0877 067 767</span>
                        <button class="btn-contacts" onclick="window.location.href='/Контакти'">Контакти</button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="position:relative;">
        <div class="container">
            &copy; 2024 - Dealership - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
